      <h2>User info</h2>
        <%= image_tag user.get_profile_image(100,100) %>
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_path(user.id)" do %>
        		<i class="fa-solid fa-user-cog"></i>
        	<% end %>
        </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
      <div>
        <label>Title</label>
        <div><%= f.text_field :title %></div>
      </div>
      <div>
        <label>Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
        <% end %>
  







