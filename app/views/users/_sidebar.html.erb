<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="btn-wrapper col-10 mx-auto">
<div class="row">
<%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_path(user.id)" do %>
		<i class="fa-solid fa-user-cog"></i>
	<% end %>
</div>
</div>

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
