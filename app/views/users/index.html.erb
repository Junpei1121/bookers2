<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
　　　<%= render 'sidebar', user: @user,book: @book%>
　　</div>
<div class="col-md-8 offset-md-1">
<h1>Users</h1>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @users.each do |user| %>
    <tr>
      <th><%= image_tag user.get_profile_image(100,100) %></th>
      <th><%= user.name %></th>
      <th><%=link_to "Show",user_path(user)%></th>
    </tr>
  </tbody>
  <%end%>
</table>
</div>
</div>
</div>
