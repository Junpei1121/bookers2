<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= flash[:notice]%>
<%= render 'users/sidebar', user: @user,book: @book%>
</div>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-hover table-inverse">
  <tbody>
    <tr>
      <td>
        <%=link_to user_path(@book.user) do%>
        <%=image_tag @book.user.get_profile_image(100,100)%>
        <%end%>
        <div><%=link_to @book.user.name,user_path(@book.user_id)%></div>
      </td>
      <td>
        <%=link_to @book.title,book_path%>
      </td>
      <td><%= @book.body %></td>
      
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-sm btn-success"%></td>
        <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-sm btn-danger" %></td>
        <% end %>
      
    </tr>
  </tbody>
</table>
</div>
</div>
</div>


